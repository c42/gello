<% if user_signed_in? %>
	<%= link_to "Logout #{current_user.github_login}", destroy_user_session_path, method: :delete %>
	<%= image_tag current_user.github_avatar_url, alt: "avatar" %>
	
	<ul>
		<% @repos.each do |repo| %>
			<li><%= link_to repo.name, "http://github.com/" + repo.full_name %></li>
		<% end %>
	</ul>
<% else %>
<%= link_to "Login", user_omniauth_authorize_path(provider: :github) unless user_signed_in? %>
<% end %>